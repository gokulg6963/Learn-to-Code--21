#include <stdio.h>
#include <stdlib.h>

int convert(int op)
{
    float usd=73.23;
    float euro=88.68;
    float pound=103.31;
    float dinar=243.60;
    float riyal=19.53;
    float dirham=19.94;
    int choice2;
    int org;
    float final;
    switch (op) {
            case 1:
                printf("  1. Dollar ---> Ruppee\n");
                printf("  2. Ruppee ---> Dollar\n");
                printf("Enter choice: ");
                scanf("%d",&choice2);
                printf("Enter Value: ");
                scanf("%d",&org);

                switch (choice2){
                    case 1:
                        final = org * usd;
                        printf("Converted value: %.2f Ruppees\n",final);
                        break;

                    case 2:
                        final = org / usd;
                        printf("Converted value: %.2f Dollar\n",final);
                        break;
                    default:
                        printf("Invalid Option");
                        break;

                }
                break;


            case 2:
                printf("  1. Euro ---> Ruppee\n");
                printf("  2. Ruppee ---> Dollar\n");
                printf("Enter choice: ");
                scanf("%d",&choice2);
                printf("Enter Value: ");
                scanf("%d",&org);

                switch (choice2){
                    case 1:
                        final = org * euro;
                        printf("Converted value: %.2f Ruppees\n",final);
                        break;

                    case 2:
                        final = org / euro;
                        printf("Converted value: %.2f Euro\n",final);
                        break;
                    default:
                        printf("Invalid Option");
                        break;

                }
                break;
            case 3:
                printf("  1. Pound ---> Ruppee\n");
                printf("  2. Ruppee ---> Pound\n");
                printf("Enter choice: ");
                scanf("%d",&choice2);
                printf("Enter Value: ");
                scanf("%d",&org);

                switch (choice2){
                    case 1:
                        final = org * pound;
                        printf("Converted value: %.2f Ruppees\n",final);
                        break;

                    case 2:
                        final = org / pound;
                        printf("Converted value: %.2f Pound\n",final);
                        break;
                    default:
                        printf("Invalid Option");
                        break;

                }
                break;
            case 4:
                printf("  1. Dinar ---> Ruppee\n");
                printf("  2. Ruppee ---> Dinar\n");
                printf("Enter choice: ");
                scanf("%d",&choice2);
                printf("Enter Value: ");
                scanf("%d",&org);

                switch (choice2){
                    case 1:
                        final = org * dinar;
                        printf("Converted value: %.2f Ruppees\n",final);
                        break;

                    case 2:
                        final = org / dinar;
                        printf("Converted value: %.2f Dinar\n",final);
                        break;
                    default:
                        printf("Invalid Option");
                        break;

                }
                break;
            case 5:
                printf("  1. Riyal ---> Ruppee\n");
                printf("  2. Ruppee ---> Riyal\n");
                printf("Enter choice: ");
                scanf("%d",&choice2);
                printf("Enter Value: ");
                scanf("%d",&org);

                switch (choice2){
                    case 1:
                        final = org * riyal;
                        printf("Converted value: %.2f Ruppees\n",final);
                        break;

                    case 2:
                        final = org / riyal;
                        printf("Converted value: %.2f Riyal\n",final);
                        break;
                    default:
                        printf("Invalid Option");
                        break;

                }
                break;
            case 6:
                printf("  1. Dirham ---> Ruppee\n");
                printf("  2. Ruppee ---> Dirham\n");
                printf("Enter choice: ");
                scanf("%d",&choice2);
                printf("Enter Value: ");
                scanf("%d",&org);

                switch (choice2){
                    case 1:
                        final = org * dirham;
                        printf("Converted value: %.2f Ruppees\n",final);
                        break;

                    case 2:
                        final = org / dirham;
                        printf("Converted value: %.2f Dirham\n",final);
                        break;
                    default:
                        printf("Invalid Option");
                        break;

                }
                break;
            case 0:
                break;
            default:
                printf("Invalid Option! ");
                break;

    }
}

int main()
{
    int choice1;


    printf("------------LTC Project------------\n");
    printf("By Gokul.G\n\n\n");
    printf("***************    Currency Converter    ***************\n\n");
    printf("Choose currency to convert to INR or visa versa.\n");
    printf("  1. US Dollar\n");
    printf("  2. Euro\n");
    printf("  3. Pound\n");
    printf("  4. Dinar\n");
    printf("  5. Riyal\n");
    printf("  6. Dirham\n");
    printf("  0. Exit\n");
    printf("Enter Option: ");
    scanf("%d",&choice1);

    convert(choice1);








    return 0;
}
